<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="jmsTransactionManager" class="org.springframework.jms.connection.JmsTransactionManager">
    <property name="connectionFactory" ref="cachingConnectionFactory" />
  </bean>

  <bean id="activeMQComponent" class="org.apache.activemq.camel.component.ActiveMQComponent">
    <property name="configuration" ref="jmsConfig" />
    <property name="transacted" value="true"/>
    <property name="cacheLevelName" value="CACHE_CONSUMER"/>
  </bean>

  <bean id="jmsConfig" class="org.apache.camel.component.jms.JmsConfiguration">
    <property name="errorHandlerLoggingLevel" value="OFF"/>
    <property name="errorHandlerLogStackTrace" value="false"/>
    <property name="connectionFactory" ref="cachingConnectionFactory" />
    <property name="destinationResolver" ref="jmsDestinationResolver" />
  </bean>

  <bean id="jmsDestinationResolver" class="org.springframework.jms.support.destination.DynamicDestinationResolver">
  </bean>

  <bean id="jmsFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
    <property name="userName" value="${activemq.broker.username}" />
    <property name="password" value="${activemq.broker.password}"/>
    <property name="brokerURL" value="${activemq.broker.url}" />
  </bean>

  <bean id="cachingConnectionFactory" class="org.springframework.jms.connection.TransactionAwareConnectionFactoryProxy">
    <property name="targetConnectionFactory">
      <ref bean="jmsFactory" />
    </property>
    <property name="synchedLocalTransactionAllowed" value="true" />
  </bean>

</beans>
